<h3><%= t '.title' %></h3>

<table>
  <tr>
    <td><%= order( @search, :by => :id, :as =>  t('.id') ) %></td>
    <td><%= order( @search, :by => :name, :as => t('name') ) %></td>
    <td><%= t '.used' %></td>
  </tr>
  <% for b in @blobs %>
    <tr>
      <td><%= link_to b.id, edit_blob_path(b) %></td>
      <td><%= link_to b.name, url_for( :action => "blob", :id => b ) %></td>
      <td>
        <% for c in b.components %>
          <% if c %><%= c.name %><% end %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

<%= will_paginate @blobs, :prev_label => t('previous'), :next_label => t('next') %>
<br />

<%= link_to t('blobs.new.title'), new_blob_path %>
