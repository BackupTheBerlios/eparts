<h3><%= t '.title' %></h3>

<table>
  <tr>
    <th><%= order( @search, :by => :name, :as => t('name') ) %></th>
    <th><%= order( @search, :by => :url, :as => t('.url') ) %></th>
  </tr>

  <% for s in @suppliers %>
    <tr>
      <td><%= link_to s.name, edit_supplier_path(s) %></td>
      <td><%= link_to s.url, s.url %></td>
    </tr>
  <% end %>
</table>

<%= will_paginate @suppliers, :prev_label => t('previous'), :next_label => t('next') %>
<br />

<%= link_to t('.new_supplier'), new_supplier_path %>
